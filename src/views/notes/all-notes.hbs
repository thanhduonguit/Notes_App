<div class="row">
  {{#each notes}}
    <div class="col-md-4">
      <div class="card m-4">
        <div class="card-body ">
          <h4 class="card-title d-flex justify-content-between " id="h4">
            {{ title }} <a href="/notes/edit/{{ _id }}"><i class="fas fa-edit"></i></a>
          </h4>
          <p>{{ description }}</p>
          <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
          </form>
        </div>
      </div>
    </div>
  {{else}}
    <div class="card mx-auto">
      <div class="card-body">
        <h1 class="text-center">Hello {{user.name}}</h1>
        <h3 id="h4">There are not Notes yet!</h3>
        <a href="/notes/add" class="btn btn-success btn-block mt-4">Create One!</a>
      </div>
    </div>
  {{/each}}
</div>

<style>
  #h4{font-weight: bold}
</style>